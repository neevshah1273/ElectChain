<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="10dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="15dp"
        android:layout_margin="5dp"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/ivCandidateProfilePhoto"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/profile_photo_circular_background"
            android:padding="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp">
            <TextView
                android:id="@+id/tvCandidateName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Candidate Name"
                android:textSize="20sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tvCampaignDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Candidate's election campaign description"
                android:layout_marginTop="20dp" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>