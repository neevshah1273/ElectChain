<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.AdminLoginActivity"
    android:orientation="vertical"
    android:background="@color/background_color">

    <include
        android:id="@+id/title_bar_return"
        layout="@layout/title_bar_return" />

    <include
        android:layout_height="100dp"
        android:layout_width="100dp"
        layout="@layout/logo_name"
        android:layout_gravity="center"
        android:layout_marginTop="50dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:orientation="vertical">
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">
            <EditText
                android:id="@+id/adminLoginEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/email_address"
                android:backgroundTint="#9C8A8A8A"
                android:textSize="17sp"
                android:inputType="text"
                android:paddingTop="15dp"
                android:paddingLeft="20dp"
                android:paddingBottom="25dp"
                tools:ignore="RtlSymmetry,TextFields,UnusedAttribute"
                android:paddingStart="20dp" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            app:passwordToggleEnabled="false">
            <EditText
                android:id="@+id/adminLoginPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/password"
                android:backgroundTint="#9C8A8A8A"
                android:textSize="17sp"
                android:inputType="textPassword"
                android:paddingTop="15dp"
                android:paddingLeft="20dp"
                android:paddingBottom="25dp"
                tools:ignore="RtlSymmetry,TextFields,UnusedAttribute"
                android:paddingStart="20dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/green_rounded_button"
            android:textColor="#FFF"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="50dp"
            android:text="@string/login"
            android:textSize="30sp" />
    </LinearLayout>



</LinearLayout>