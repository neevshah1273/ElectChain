<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="15dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="25dp"
        android:layout_margin="5dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/ivCandidateProfilePhoto"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/profile_photo_circular_background"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/tvCandidateName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/candidate_name"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp" />

        <TextView
            android:id="@+id/tvBtnVote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/vote"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#DAE85E5E"
            android:gravity="end" />

    </LinearLayout>

</androidx.cardview.widget.CardView>