<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.PhaseFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/change_phase"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="#DA166113"
            android:letterSpacing="0.13"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/current_phase"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#DA32BC2C" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Voting"
                android:textSize="22sp"
                android:textStyle="italic"
                android:layout_marginStart="10dp"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="80sp"
            android:background="@drawable/red_rounded_rectangle_button"
            android:text="@string/change_phase"
            android:textSize="18sp"
            android:textColor="#FFF"
            android:layout_gravity="end"
            android:padding="20dp"
            android:layout_marginTop="180dp" />
    </LinearLayout>

</FrameLayout>